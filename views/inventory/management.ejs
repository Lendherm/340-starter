<%- include('../partials/head') %>

  <body>
    <div class="container">


      <main class="main-content">
        <h1>Inventory Management</h1>

        <% if (messages && messages.success) { %>
          <div class="alert alert-success">
            <%= messages.success %>
          </div>
          <% } %>

            <% if (messages && messages.error) { %>
              <div class="alert alert-error">
                <%= messages.error %>
              </div>
              <% } %>

                <div class="management-links">
                  <a href="/inv/add-classification" class="btn-primary">Add New Classification</a>
                  <a href="/inv/add-inventory" class="btn-primary">Add New Inventory</a>
                  <!-- Add Search Link Here -->
                  <a href="/inv/search" class="btn-primary">Search Inventory</a>
                </div>

                <div class="classification-controls">
                  <%- classificationSelect %>
                    <button id="deleteClassificationBtn" class="btn-danger" disabled>Delete Classification</button>
                </div>

                <table id="inventoryDisplay" class="inventory-table">
                  <thead>
                    <tr>
                      <th>Vehicle Name</th>
                      <th>Action</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody id="inventoryTableBody">
                    <!-- Inventory items will be inserted here by JavaScript -->
                  </tbody>
                </table>
                <noscript>
                  <div class="alert alert-error">
                    JavaScript must be enabled to use this page.
                  </div>
                </noscript>
      </main>


    </div>

    <script src="/js/inventory.js"></script>
  </body>

  </html>