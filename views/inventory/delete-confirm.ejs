<%- include('../partials/head') %>
<body>
  <div class="container">
   
    
    <main class="main-content">
      <h1>Delete Vehicle</h1>
      
      <% if (messages && messages.error) { %>
        <div class="alert alert-error">
          <%= messages.error %>
        </div>
      <% } %>
      
      <p class="confirmation-warning">Confirm Deletion - The delete is permanent and cannot be undone.</p>
      
      <form action="/inv/delete" method="post" class="management-form">
        <input type="hidden" name="inv_id" value="<%= inv_id %>">
        
        <div class="form-group">
          <label for="classification_id">Classification</label>
          <input type="text" id="classification_id" 
                 value="<%= classification_name %>" readonly>
        </div>
        
        <div class="form-group">
          <label for="inv_make">Make</label>
          <input type="text" id="inv_make" name="inv_make" 
                 value="<%= inv_make %>" readonly>
        </div>
        
        <div class="form-group">
          <label for="inv_model">Model</label>
          <input type="text" id="inv_model" name="inv_model" 
                 value="<%= inv_model %>" readonly>
        </div>
        
        <div class="form-group">
          <label for="inv_year">Year</label>
          <input type="text" id="inv_year" name="inv_year" 
                 value="<%= inv_year %>" readonly>
        </div>
        
        <div class="form-group">
          <label for="inv_price">Price</label>
          <input type="text" id="inv_price" name="inv_price" 
                 value="<%= inv_price %>" readonly>
        </div>
        
        <button type="submit" class="btn-primary delete-btn">Delete Vehicle</button>
      </form>
    </main>

    
  </div>
</body>
</html>