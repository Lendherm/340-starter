<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <div class="container">
    

    <main class="main-content">
      <% if (showFeatured !== false) { %>
        <!-- Welcome Section (solo en página de inicio) -->
        <section class="welcome-section">
          <h1>Welcome to CSE Motors!</h1>

          <!-- Add Search Form Here -->
          <form action="/inv/search" method="get" class="search-form">
            <div class="form-group">
              <input type="text" name="searchTerm" placeholder="Search vehicles by make, model or type">
              <button type="submit" class="btn-primary">Search</button>
            </div>
          </form>
          
          <% if (messages && messages.success) { %>
  <div class="alert alert-success">
    <%= messages.success %>
  </div>
<% } %>

<% if (messages && messages.error) { %>
  <div class="alert alert-error">
    <%= messages.error %>
  </div>
<% } %>
        </section>

        <!-- Featured Vehicle Section (solo en página de inicio) -->
        <section class="vehicle-section">
          <div class="vehicle-image">
            <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean">
          </div>
          <div class="vehicle-details">
            <h2>DMC Delorean</h2>
            <ul class="features-list">
              <li>3 Cup holders</li>
              <li>Superman doors</li>
              <li>Fuzzy dice!</li>
            </ul>
            <button class="cta-button">Own Today</button>
          </div>
        </section>

        <!-- Reviews Section (solo en página de inicio) -->
        <section class="reviews-section">
          <h2>DMC Delorean Reviews</h2>
          <ul class="review-list">
            <li class="review-item">
              "So fast it's almost like traveling in time." (4/5)
            </li>
            <li class="review-item">
              "Coolest ride on the road." (4/5)
            </li>
            <li class="review-item">
              "I'm feeling McFly!" (5/5)
            </li>
            <li class="review-item">
              "The most futuristic ride of our day." (4.5/5)
            </li>
            <li class="review-item">
              "80's livin and I love it!" (5/5)
            </li>
          </ul>
        </section>

        <!-- Upgrades Section (solo en página de inicio) -->
        <section class="upgrades">
          <h2>Delorean Upgrades</h2>
          <div class="upgrade-grid">
            <div class="upgrade-item">
              <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
              <p>Flux Capacitor</p>
            </div>
            <div class="upgrade-item">
              <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
              <p>Flame Decals</p>
            </div>
            <div class="upgrade-item">
              <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
              <p>Bumper Stickers</p>
            </div>
            <div class="upgrade-item">
              <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
              <p>Hub Caps</p>
            </div>
          </div>
        </section>
      <% } %>

      <!-- Área para contenido dinámico -->
      <%- content %>
    </main>

   
  </div>

</body>
</html>